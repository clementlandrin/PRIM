#version 450

layout(location=0) out vec4 output_color;

in vec4 fPosition;
in vec4 fLightPosition;
in vec4 fNormal;

struct LightSource
{
	vec3 position;
	vec3 color;
	float intensity;
};

void main() {
  vec3 wi = -normalize(fPosition.xyz - fLightPosition.xyz);
  vec3 wo = normalize(-fPosition.xyz);
  output_color = vec4(dot(fNormal.xyz,wi));
}